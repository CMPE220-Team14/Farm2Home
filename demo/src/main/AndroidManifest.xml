<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.android.cmpe220.farm2home.demo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- for card.io card scanning -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <!-- for most things, including card.io & paypal -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.FarmList"/>
        <activity android:name=".activities.ProductActivity"/>
        <activity android:name=".activities.ShoppingCartActivity"/>
        <activity android:name=".activities.GoogleWallet"/>
        <activity android:name=".activities.BillingActivity"/>
        <activity android:name=".activities.MainActivity"/>
        <activity android:name=".activities.FarmActivity"/>
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SignUPActivity"/>
<activity android:name=".activities.ArrayAdapterListViewActivity"/>

        <activity
            android:name=".activities.PayPal_sdk"/>


        <service
            android:name="com.paypal.android.sdk.payments.PayPalService"
            android:exported="false" />

        <activity android:name="com.paypal.android.sdk.payments.PaymentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.LoginActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentMethodActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentConfirmActivity" />

        <activity
            android:name="io.card.payment.CardIOActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />


    </application>

</manifest>
