<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.android.cmpe220.farm2home.demo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- for card.io card scanning -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <!-- for most things, including card.io & paypal -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".MyApplication"
        android:largeHeap="true"
        >

        <activity android:name=".FarmList"/>
        <activity android:name="com.android.cmpe220.farm2home.demo.ProductActivity"/>
        <activity android:name="com.android.cmpe220.farm2home.demo.ShoppingCartActivity"/>
        <activity android:name="com.android.cmpe220.farm2home.demo.GoogleWallet"/>
        <activity android:name="com.android.cmpe220.farm2home.demo.BarcodeScan"/>
        <activity android:name="com.android.cmpe220.farm2home.demo.MainActivity"/>

        <activity android:name=".FarmList" />
        <activity android:name=".ProductActivity" />
        <activity android:name=".ShoppingCartActivity" />
        <activity android:name=".MainActivity" />

        <activity
            android:name="com.android.cmpe220.farm2home.demo.NewLoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.android.cmpe220.farm2home.demo.SignUPActivity"/>
<activity android:name="com.android.cmpe220.farm2home.demo.ArrayAdapterListViewActivity"/>

        <activity
            android:name="com.android.cmpe220.farm2home.demo.PayPal_sdk"/>


        <service
            android:name="com.paypal.android.sdk.payments.PayPalService"
            android:exported="false" />

        <activity android:name="com.paypal.android.sdk.payments.PaymentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.LoginActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentMethodActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentConfirmActivity" />

        <activity
            android:name="io.card.payment.CardIOActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />

        <activity
            android:name=".Classify"
            android:label="@string/title_activity_classify"
            android:parentActivityName=".HomeActivity"
           android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.cmpe220.farm2home.demo.HomeActivity" />
        </activity>
        <activity
            android:name=".FarmerActivity"
            android:label="@string/title_activity_farmer"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.cmpe220.farm2home.demo.HomeActivity" />
        </activity>
        <activity
            android:name=".AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:parentActivityName=".FarmerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.cmpe220.farm2home.demo.FarmerActivity" />
        </activity>
        <activity
            android:name=".MainScreenActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- All Product Activity -->
        <activity
            android:name=".AllProductsActivity"
            android:label="All Products" >
        </activity>

        <!-- Add Product Activity -->
        <activity
            android:name=".NewProductActivity"
            android:label="Add New Product" >
        </activity>

        <!-- Edit Product Activity -->
        <activity
            android:name=".EditProductActivity"
            android:label="Edit Product" >
        </activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
