<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity"
    android:background="@drawable/background"
    android:clickable="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       Scan Barcode       "
        android:layout_centerHorizontal="true"
        android:onClick="scanNow"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/btn_scan_now"
        android:background="@color/orange"
        android:textAllCaps="true"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/scan_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_below="@+id/btn_scan_now"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />
    <TextView
        android:id="@+id/scan_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_below="@+id/scan_format"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Google Wallet    "
        android:onClick="payment"
        android:id="@+id/google_wallet"
        android:background="@color/orange"
        android:textAllCaps="true"
        android:textColor="@android:color/white"

        android:clickable="true"
        android:layout_below="@+id/scan_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Cash on Delivery  "
        android:onClick="payment"
        android:id="@+id/cod"
        android:background="@color/orange"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/btn_scan_now"
        android:layout_alignStart="@+id/btn_scan_now" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Credit/Debit       "
        android:onClick="payment"
        android:id="@+id/button4"
        android:background="@color/orange"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:layout_below="@+id/scan_content"
        android:layout_alignLeft="@+id/cod"
        android:layout_alignStart="@+id/cod"
        android:layout_marginTop="123dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="             PAYPAL            "
        android:onClick="payment"
        android:id="@+id/paypal"
        android:layout_below="@+id/cod"
        android:layout_alignLeft="@+id/cod"
        android:layout_alignStart="@+id/cod"
        android:layout_marginTop="24dp"
        android:background="@color/orange"
        android:textAllCaps="true"
        android:textColor="@android:color/white"/>


</RelativeLayout>
