<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#284d2a" />
            <stroke
                android:width="1dp"
                android:color="#9ecca1" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#284d2a"
                android:endColor="#9ecca1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#9ecca1" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>